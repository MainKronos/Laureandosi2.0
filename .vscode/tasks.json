{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PHP CodeSniffer Fixer",
			"type": "shell",
			"command": "C:\\isw\\PHP_CodeSniffer\\bin\\phpcbf",
			"args": [
				"--standard=PSR12",
				"--report=emacs",
				"--basepath=${workspaceFolder}",
				"${workspaceFolder}"
			],
			"problemMatcher": [
				{
					"owner": "phpcs",
					"fileLocation": "relative",
					"pattern": {
						"regexp": "^(.+?):(\\d+):(\\d+): +(.+?) - (.+)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				}
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"clear": true
			}
		},
		{
			"label": "PHP CodeSniffer",
			"type": "shell",
			"command": "C:\\isw\\PHP_CodeSniffer\\bin\\phpcs",
			"args": [
				"--standard=PSR12",
				"--report=emacs",
				"--basepath=${workspaceFolder}",
				"${workspaceFolder}"
			],
			"problemMatcher": [
				{
					"owner": "phpcs",
					"fileLocation": "relative",
					"pattern": {
						"regexp": "^(.+?):(\\d+):(\\d+): +(.+?) - (.+)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				}
			],
			"presentation": {
				"reveal": "always",
				"clear": true
			}
		}
	]
}